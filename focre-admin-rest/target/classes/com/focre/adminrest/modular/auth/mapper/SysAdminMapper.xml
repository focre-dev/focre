<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.focre.adminrest.modular.auth.mapper.SysAdminMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.focre.adminrest.modular.auth.model.entity.SysAdmin">
        <id column="id" property="id" />
        <result column="avatar" property="avatar" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="name" property="name" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="role_ids" property="roleIds" />
        <result column="dept_id" property="deptId" />
        <result column="status" property="status" />
        <result column="version" property="version" />
        <result column="is_del" property="isDel" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <resultMap id="AdminListMap" type="com.focre.adminrest.modular.auth.model.dto.AdminListDto">
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="name" property="name" />
        <result column="role_ids" property="roleIds" />
        <result column="dept" property="dept" />
        <result column="status" property="status" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="dept_id" property="deptId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, avatar, username, password, salt, name, email, phone, role_ids, dept_id, status, version, is_del, create_time, update_time
    </sql>

    <select id="findPageList" resultMap="AdminListMap">
        SELECT id, username, name, status, email, phone, dept_id, create_time, update_time
        FROM sys_admin
        WHERE is_del = 1
        <if test="param.keyword != null and param.keyword != ''">
            AND
            (
                username LIKE CONCAT('%',#{param.keyword},'%')
                OR name LIKE CONCAT('%',#{param.keyword},'%')
            )
        </if>
        <if test="param.createTime != null and param.createTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d') &gt;= #{param.createTime}
        </if>
        <if test="param.deptId != null and param.deptId != 0">
            AND (
                dept_id = #{param.deptId} OR dept_id in (
                    SELECT id
                    FROM sys_dept
                    WHERE parent_ids like CONCAT('%[', #{param.deptId}, ']%')
                )
            )
        </if>
    </select>
</mapper>
